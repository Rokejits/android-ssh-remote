<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:versionCode="1"
  android:versionName="1.0"
  package="com.googlecode.rssh">
  <uses-sdk android:minSdkVersion="10" />

  <application
    android:icon="@drawable/icon"
    android:label="@string/app_name">
    <activity android:name=".SshRemoteActivity_">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="com.googlecode.rssh.actions.SSH_REMOTE"/>
      </intent-filter>
    </activity>
    <activity android:name=".FileBrowser_"/>
    <activity android:name=".settings.ConfingActivity"/>
    <service
      android:name=".shell.CommunicationService"
      android:process=":ssh_communicator" />
  </application>
</manifest>